
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="~/Assets/Admin/Profile.css">
<div class="row" style="height:500px;">
    <div class="col-4">
        <div class="card" style="border: none;">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" style="width:80%;">
                    <div class="mt-3">
                        <h4>John Doe</h4>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#UploadImgModal">
                            Change Profile Picture
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div class="card p-4" style="border: none;">
            <div class="card-body">
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        Mohamed Ahmed Saad Ahmed
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        mohamedahmedsaadahmed77@gmail.com
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        (200) 100-7762-472
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">User Role</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        Admin
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="UploadImgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Change Image</h5>
                <button class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("", "Admin")" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="file" class="form-control" required name="image" style="border: none;">
                    </div>
                    <div class="modal-footer" style="border: none;">
                        <button type="submit" class="btn btn-primary">Update Image</button>
                        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>