
@{
    ViewBag.Title = "Received Questions";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<link rel="stylesheet" href="~/Assets/Agency/Question.css">
<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 col-xl-8 mx-auto">
            <div class="p-3 bg-dark text-light shadow rounded">
                <div class="media">
                    <img class="rounded-circle img-thumbnail" src="~/Database/Images/IMG_8051.JPG" alt="" style="width: 75px;height: 75px;">
                    <div class="media-body ml-3">
                        <blockquote class="blockquote border-0 p-0">
                            <p class="font-italic lead"> <i class="fa fa-quote-left mr-3 text-success"></i>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                            <footer class="blockquote-footer">
                                Someone famous in
                                <cite title="Source Title">Source Title</cite>
                            </footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-success" style="width: 100%;" data-toggle="modal" data-target="#UploadImgModal">
                Answer
            </button>
            <!-- Modal -->
            <div class="modal fade" id="UploadImgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title">Answer</h5>
                            <button class="close" data-dismiss="modal"><span>&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <textarea class="form-control" required name="image" rows="5"></textarea>
                            </div>
                            <div class="modal-footer" style="border: none;">
                                <button data-dismiss="modal" class="btn btn-success">Submit Answer</button>
                                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>