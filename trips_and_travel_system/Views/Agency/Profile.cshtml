
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<div class="offset-2 col-8 pt-5">
    <form action="@Url.Action("Profile", "Agency")" method="post" enctype="multipart/form-data" class="form-horizontal form-group">
        <div class="form-group offset-2 col-8">
            <img class="card-img" src="~/Database/Images/IMG_8051.JPG" />
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-dark" style="width: 100%;" data-toggle="modal" data-target="#UploadImgModal">
                Change Picture
            </button>
        </div>
        <div class="form-group">
            <label>Agency Name:</label>
            <input id="AgencyName" class="form-control inputClass" value="blablabla" disabled>
        </div>
        <div class="form-group">
            <label>Manager First Name:</label>
            <input id="FirstName" class="form-control inputClass" value="blablabla" disabled>
        </div>
        <div class="form-group">
            <label>Manager Last Name:</label>
            <input id="LastName" class="form-control inputClass" value="blablabla" disabled>
        </div>
        <div class="form-group">
            <label>Username:</label>
            <input id="Username" class="form-control inputClass" value="blablabla" disabled>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input id="Password" class="form-control inputClass" value="blablabla" disabled>
            <input id="ConfirmPassword" class="form-control inputClass mt-3" hidden="hidden" placeholder="Confirm Password" disabled>
        </div>
        <div class="form-group">
            <label>Phone:</label>
            <input id="Phone" class="form-control inputClass" value="blablabla" disabled>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-dark" id="EditBtn" onClick="EditData()" style="width: 100%;">Edit</button>
            <button type="submit" class="btn btn-success  mt-2" id="SaveBtn" style="width: 100%;" hidden="hidden">Save</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="UploadImgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Change Image</h5>
                        <button class="close" data-dismiss="modal"><span>&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="file" class="form-control" required name="image" style="border: none;">
                        </div>
                        <div class="modal-footer" style="border: none;">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Upload Image</button>
                            <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>